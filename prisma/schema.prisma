generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId         Int      @id @default(autoincrement())
  email          String   @unique
  username       String   @unique
  dateOfBirth    DateTime @default(now())
  hashedPassword String
  profileImage   String?
  role           Role     @default(USUARIO)

  @@index([email])
}

enum Role {
  USUARIO
  ADMIN
}
