// /ProgramacionDeAppsMoviles/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id       String   @id @default(uuid())
  nombre   String
  apellido String
  edad     Int
  email    String   @unique
  password String
  esAdmin  Boolean  @default(false)
  habitos  Habito[]
  role     Role     @default(USUARIO)

  @@unique([edad, nombre])
  @@index([email])
}

model Habito {
  id          String   @id @default(uuid())
  titulo      String
  creadoEn    DateTime @default(now())
  updateadoEn DateTime @updatedAt
  userId      String
  autor       Usuario  @relation(fields: [userId], references: [id])
}

enum Role {
  USUARIO
  ADMIN
}
