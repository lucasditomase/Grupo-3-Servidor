generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId         Int     @id @default(autoincrement())
  email          String  @unique
  username       String
  hashedPassword String
  name           String  @default("")
  profileImage   String?
  role           Role    @default(USUARIO)

  @@index([email])
}

enum Role {
  USUARIO
  ADMIN
}
